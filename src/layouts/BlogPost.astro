---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import FeatureFlag from "../config/FeatureFlag/featureflag.json";
import { ArrowLeft, Calendar, Clock, Tag } from "lucide-react";
export const prerender = true;

try {
  if (!FeatureFlag.CaseLaw) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}
type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, tags } = Astro.props;

const readingTime = "5 min read";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="bg-dracula-bg text-dracula-foreground leading-relaxed">
    <Header />

    <main class="min-h-screen">
      <!-- Hero Section -->
      <div class="bg-dracula-cyan py-16 sm:py-24">
        <div class="max-w-4xl mx-auto px-6 sm:px-8">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-dracula-bg/80 hover:text-dracula-bg transition-colors mb-8 group"
          >
            <ArrowLeft className="w-4 h-4 group-hover:-translate-x-1 transition-transform" />
            <span class="text-sm font-medium">Back to Case Law</span>
          </a>

          {
            tags && tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-6">
                {tags.map((tag) => (
                  <span class="px-3 py-1 text-xs font-semibold uppercase tracking-wider text-dracula-cyan bg-dracula-bg/90 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }

          <h1
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-dracula-bg leading-tight mb-6"
            style="font-family: 'Playfair Display', serif;"
          >
            {title}
          </h1>

          <p
            class="text-lg text-dracula-bg/80 leading-relaxed mb-8 max-w-3xl"
            style="font-family: 'Inter', sans-serif;"
          >
            {description}
          </p>

          <div
            class="flex flex-wrap items-center gap-6 text-sm text-dracula-bg/70"
          >
            <div class="flex items-center gap-2">
              <Calendar className="w-4 h-4" />
              <FormattedDate date={pubDate} />
            </div>
            <div class="flex items-center gap-2">
              <Clock className="w-4 h-4" />
              <span>{readingTime}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Article Content -->
      <article class="max-w-4xl mx-auto px-6 sm:px-8 py-12 sm:py-16">
        <div
          class="bg-white rounded-2xl shadow-xl border border-dracula-current-line overflow-hidden"
        >
          <!-- Decorative top border -->
          <div class="h-1 bg-gradient-to-r from-dracula-cyan via-dracula-green to-dracula-pink"></div>

          <div class="p-8 sm:p-12 lg:p-16">
            <div class="blog-content prose-lg">
              <slot />
            </div>
          </div>
        </div>

        <!-- Article Footer -->
        <div class="mt-12 pt-8 border-t border-dracula-current-line">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-6">
            <div class="text-center sm:text-left">
              <p class="text-sm text-dracula-comment mb-1">Published on</p>
              <p class="font-semibold text-dracula-foreground">
                <FormattedDate date={pubDate} />
              </p>
            </div>

            <a
              href="/blog"
              class="inline-flex items-center gap-2 px-6 py-3 bg-dracula-cyan text-dracula-bg font-semibold rounded-lg hover:bg-dracula-orange transition-colors"
            >
              <ArrowLeft className="w-4 h-4" />
              View All Articles
            </a>
          </div>
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
