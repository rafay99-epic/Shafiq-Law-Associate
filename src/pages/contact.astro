---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import userConfig from "../config/SiteConfig/config.json";
import Analytics from "@vercel/analytics/astro";
import ContactForm from "../components/React/Contact/ContactForm";
import FeatureFlag from "../config/FeatureFlag/featureflag.json";
import SpeedInsights from "@vercel/speed-insights/astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO } from "astro-seo";
import { generateContactPageSchema } from "../utils/seoHelpers";

export const prerender = true;

try {
  if (!FeatureFlag.ContactUS) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}

const siteUrl = (Astro.site?.toString() || Astro.url.origin) as string;
const ogImageUrl = new URL("/ShafiqLawAssociates.png", siteUrl).toString();
const contactPageSchema = generateContactPageSchema(siteUrl, userConfig);
---

<!doctype html>
<html lang="en">
  <head>
    <SpeedInsights />
    <BaseHead />
    <SEO
      title="Contact Us | Expert Legal Consultation | Shafiq Law Associates"
      description="Contact Shafiq Law Associates in Rawalpindi, Pakistan. Two convenient office locations with flexible hours. Call +92 300 9817389 or email slclaw@gmail.com for expert legal consultation."
      canonical={Astro.url.href}
      openGraph={{
        basic: {
          title: "Contact Us | Expert Legal Consultation | Shafiq Law Associates",
          type: "website",
          image: ogImageUrl,
          url: Astro.url.href,
        },
        optional: {
          siteName: userConfig.SITE_TITLE,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: "Contact Us | Expert Legal Consultation | Shafiq Law Associates",
        description:
          "Contact Shafiq Law Associates in Rawalpindi, Pakistan. Two convenient office locations with flexible hours.",
        image: ogImageUrl,
      }}
    />
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(contactPageSchema)}
    />
    <Analytics />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
    />
  </head>
  <body class="bg-dracula-bg">
    <Header />
    <main>
      <ContactForm offices={userConfig.offices} client:load />
    </main>
    <Footer />
  </body>
</html>
