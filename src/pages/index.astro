---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import LandingPageHero from "../components/React/Home/Landing";
import userConfig from "../config/SiteConfig/config.json";
import Analytics from "@vercel/analytics/astro";
import WhyChooseUS from "../components/React/Home/WhyChooseUS";
import ServicesPreview from "../components/React/Home/ServicesPreview";
import ContactSection from "../components/React/Home/Contact";
import LatestBlog from "../components/React/Home/LatestBlog";
import FAQ from "../components/React/Home/FAQ";
import PricingSection from "../components/React/Pricing/PricingPackage";
import FeatureFlag from "../config/FeatureFlag/featureflag.json";
import SpeedInsights from "@vercel/speed-insights/astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO } from "astro-seo";
import {
  generateOrganizationSchema,
  generateWebSiteSchema,
} from "../utils/seoHelpers";

export const prerender = true;

try {
  if (!FeatureFlag.HomePage) {
    return Astro.redirect("/access-denied");
  }
} catch (error) {
  return Astro.redirect("/404");
}

import { getCollection } from "astro:content";
const rawPosts = await getCollection("blog");

const posts = rawPosts
  .filter((post) => !post.data.draft)
  .map((post) => ({
    id: post.id,
    title: post.data.title,
    description: post.data.description,
    pubDate: new Date(post.data.pubDate),
    tags: post.data.tags || [],
  }))
  .sort((a, b) => b.pubDate.getTime() - a.pubDate.getTime());

const siteUrl = (Astro.site?.toString() || Astro.url.origin) as string;
const ogImageUrl = new URL(userConfig.organizationLogo, siteUrl).toString();
const organizationSchema = generateOrganizationSchema(siteUrl, userConfig);
const websiteSchema = generateWebSiteSchema(siteUrl, userConfig.SITE_TITLE);
---

<!doctype html>
<html lang="en">
  <head>
    <SpeedInsights />
    <BaseHead />
    <SEO
      title="Expert Legal Services in Pakistan | Shafiq Law Associates"
      description="Shafiq Law Associates provides expert legal services in Pakistan including criminal defense, family law, corporate law, property disputes, and more. Trusted legal representation in Rawalpindi."
      canonical={Astro.url.href}
      openGraph={{
        basic: {
          title: "Expert Legal Services in Pakistan | Shafiq Law Associates",
          type: "website",
          image: ogImageUrl,
          url: Astro.url.href,
        },
        optional: {
          siteName: userConfig.SITE_TITLE,
          description:
            "Shafiq Law Associates provides expert legal services in Pakistan including criminal defense, family law, corporate law, property disputes, and more. Trusted legal representation in Rawalpindi.",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: "Expert Legal Services in Pakistan | Shafiq Law Associates",
        description:
          "Shafiq Law Associates provides expert legal services in Pakistan including criminal defense, family law, corporate law, property disputes, and more.",
        image: ogImageUrl,
      }}
      extend={{
        meta: [
          {
            name: "keywords",
            content:
              "legal services Pakistan, criminal defense, family law, corporate law, property disputes, Rawalpindi lawyer, legal consultation Pakistan",
          },
        ],
      }}
    />
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(organizationSchema)}
    />
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(websiteSchema)}
    />
    <Analytics />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
    />
  </head>
  <body class="bg-dracula-bg">
    <Header />
    <main>
      <!-- Hero Section -->
      {
        FeatureFlag.HomePageComponent[0].LandingPage && (
          <section class="px-6">
            <LandingPageHero
              imageUrl={userConfig.landingPageHeroImages}
              LandingPageIntroText={userConfig.LandingPageIntroText}
              LandingPageSecondLineText={userConfig.LandingPageSecondLineText}
              client:load
            />
          </section>
        )
      }

      <!-- Why Choose Us Section -->
      {
        FeatureFlag.HomePageComponent[0].WhyChooseUs && (
          <section class="px-6">
            <WhyChooseUS reasons={userConfig.WhyChooseUs} client:load />
          </section>
        )
      }

      <!-- Services Preview Section -->
      {
        FeatureFlag.Services && (
          <section class="px-6">
            <ServicesPreview services={userConfig.services} client:load />
          </section>
        )
      }

      <!-- Latest Blog/Case Law Section -->
      {
        FeatureFlag.CaseLaw && posts.length > 0 && (
          <section class="px-6">
            <LatestBlog posts={posts} client:load />
          </section>
        )
      }

      <!-- FAQ Section -->
      {
        FeatureFlag.HomePageComponent[0].FAQ && (
          <section class="px-6">
            <FAQ faqData={userConfig.faq} client:load />
          </section>
        )
      }

      <!-- Pricing Section -->
      {
        FeatureFlag.Pricing && (
          <section class="px-6">
            <PricingSection pricingPlans={userConfig.pricingPlans} client:load />
          </section>
        )
      }

      <!-- Contact Section -->
      {
        FeatureFlag.HomePageComponent[0].ContactUS && (
          <section class="px-6">
            <ContactSection offices={userConfig.offices} client:load />
          </section>
        )
      }
    </main>
    <Footer />
  </body>
</html>
